<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online chat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
 
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">МО ЭВМ</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="NewsPanel" asp-action="NewsPanel">Новости</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TeacherCardEdit" asp-action="LecturerPanel">Кадры</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Учебная работа</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Научная работа</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Магистерские программы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Абитуриенту</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Аспиранту</a>
                        </li>

                        @*<li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>*@
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {<div class="logout">
                        <form  asp-controller="ChatPanel" asp-action="ChatPanel">
                            <div class="form-group">
                                <input type="submit" value="Мои сообщения" class="btn btn-primary" />
                            </div>
                        </form>
                        <form class="logoutbut" asp-controller="Account" asp-action="Logout">
                            <div class="form-group">
                                <input type="submit" value="Выйти" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {

                        <form class="logout" asp-controller="Account" asp-action="Login">
                            <div class="form-group">
                                <input type="submit" value="Войти" class="btn btn-primary" />
                            </div>
                        </form>

                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                @if (@User?.Claims?.ElementAt(1)?.Value == "Admin")
                {

                    <a asp-area="" asp-controller="Admin" asp-action="AdminPanel">Управление правами доступа</a>

                }
                @if (@User?.Claims?.ElementAt(1)?.Value == "Teacher")
                {
                 
                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminPanel">Добавление студентов</a>
          
                }


            }
        </div>
    </footer>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @RenderSection("Scripts", required: false)
</body>
</html>
